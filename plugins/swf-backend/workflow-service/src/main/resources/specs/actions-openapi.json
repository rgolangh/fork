          },
          "entityRefs": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Entity references of the entities to get"
          },
          "optional": {
            "type": "boolean",
            "description": "Allow the entity or entities to optionally exist. Default: false"
          },
          "defaultKind": {
            "type": "string",
            "description": "The default kind"
          },
          "defaultNamespace": {
            "type": "string",
